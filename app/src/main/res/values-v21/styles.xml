<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="SuperMaterialTheme">

        <item name="colorPrimary">@color/dark_red</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/red</item>

        <item name="windowBackground">@color/red_orange</item>
        <item name="navigationBarColor">@color/orange</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlHighlight">@color/red_orange</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="elevation">@color/yellow</item>

    </style>
    <style name="SuperMaterialTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/light_gray</item>
        <item name="Background">@color/background</item>

    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="windowBackground">@color/dark_gray</item>
        <item name="navigationBarColor">@color/black</item>
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlHighlight">@color/light_gray</item>
        <item name="colorControlActivated">@color/light_gray</item>

    </style>
</resources>